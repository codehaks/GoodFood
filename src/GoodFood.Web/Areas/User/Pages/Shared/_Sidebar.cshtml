
<div class="sidebar">
    <!-- User Profile Section -->
    <div class="sidebar-widget">
        <h4>حساب من</h4>
        <div class="text-center">
            <i class="flaticon-user" style="font-size: 60px; color: #FFA323; margin-bottom: 15px;"></i>
            <h5 style="margin: 0 0 5px 0;">@User.Identity.Name</h5>
            <p style="color: #28a745; font-size: 14px; margin: 0;">کاربر فعال</p>
        </div>
    </div>

    <!-- Navigation Menu -->
    <div class="sidebar-widget categories">
        <h4>پنل کاربری</h4>
        <div class="category-box">
            <ul class="list-style">
                <li>
                    <a asp-page="/index" asp-area="user" class="@(ViewContext.RouteData.Values["page"]?.ToString() == "/Index" ? "active" : "")">
                        <i class="flaticon-dashboard"></i> داشبورد
                    </a>
                </li>
                <li>
                    <a asp-page="/orders/index" asp-area="user" class="@(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("/Orders") == true ? "active" : "")">
                        <i class="flaticon-order"></i> سفارش ها
                        <span style="background: #FFA323; color: white; font-size: 10px; padding: 2px 6px; border-radius: 10px; margin-right: 5px;">جدید</span>
                    </a>
                </li>
                <li>
                    <a href="#" style="opacity: 0.6;">
                        <i class="flaticon-payment"></i> پرداخت ها <small>(به زودی)</small>
                    </a>
                </li>
                <li>
                    <a href="#" style="opacity: 0.6;">
                        <i class="flaticon-heart"></i> علاقه مندی ها <small>(به زودی)</small>
                    </a>
                </li>
                <li>
                    <a href="#" style="opacity: 0.6;">
                        <i class="flaticon-location"></i> آدرس ها <small>(به زودی)</small>
                    </a>
                </li>
                <li>
                    <a href="#" style="opacity: 0.6;">
                        <i class="flaticon-settings"></i> تنظیمات <small>(به زودی)</small>
                    </a>
                </li>
                <li style="border-top: 1px solid #EEEFF2; margin-top: 10px; padding-top: 10px;">
                    <a asp-area="Identity" asp-page="/Account/Logout" style="color: #dc3545;">
                        <i class="flaticon-logout"></i> خروج
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="sidebar-widget">
        <h4>آمار سریع</h4>
        <div class="row">
            <div class="col-6">
                <div class="text-center" style="background: #f8f9fa; padding: 15px; border-radius: 5px; margin-bottom: 10px;">
                    <i class="flaticon-order" style="font-size: 24px; color: #FFA323;"></i>
                    <h6 style="margin: 5px 0 0 0;">سفارشات</h6>
                    <small style="color: #6c757d;">-</small>
                </div>
            </div>
            <div class="col-6">
                <div class="text-center" style="background: #f8f9fa; padding: 15px; border-radius: 5px; margin-bottom: 10px;">
                    <i class="flaticon-money" style="font-size: 24px; color: #28a745;"></i>
                    <h6 style="margin: 5px 0 0 0;">مجموع خرید</h6>
                    <small style="color: #6c757d;">- تومان</small>
                </div>
            </div>
        </div>
    </div>
</div>
