@page
@model GoodFood.Web.Areas.Admin.Pages.Foods.IndexModel
@{
}

<div class="d-flex align-items-center justify-content-between p-3 border-bottom tx-16">
    <div class="d-flex align-items-center">
        <span> غذاها</span>
    </div>
    <div>
        <a class="btn btn-primary" asp-page="./create" target="_blank">جدید</a>

    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">غذاها</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>نام</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.FoodList)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>
                                        <a class="btn btn-primary" asp-page="edit" asp-route-foodid="@item.Id">ویرایش</a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
