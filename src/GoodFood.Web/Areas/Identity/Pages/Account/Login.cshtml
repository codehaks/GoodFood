@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="content-wrapper">

    <div class="breadcrumb-wrap bg-f br-1">
        <div class="overlay bg-black op-9"></div>
        <img src="assets/img/shape-1.png" alt="Image" class="br-shape-1">
        <img src="assets/img/shape-2.png" alt="Image" class="br-shape-2">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="breadcrumb-title">
                        <h2>ورود کاربران</h2>
                        <ul class="breadcrumb-menu list-style">
                            <li><a href="index.html">خانه </a></li>
                            <li>ورود کاربران</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <section class="login-wrap pt-100 pb-100">
        <img src="assets/img/shape-1.png" alt="Image" class="login-shape-1">
        <img src="assets/img/shape-2.png" alt="Image" class="login-shape-2">
        <div class="container">
            <div class="col-xl-6 offset-xl-3 col-lg-8 offset-lg-2 col-md-8 offset-md-2">
                <div class="login-form">
                    <div class="login-header bg-green">
                        <h2 class="text-center mb-0">ورود کاربران</h2>
                    </div>
                    <div class="login-body">
                        <form class="form-wrap" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label asp-for="Input.Email">نام کاربری/ایمیل</label>
                                        <input asp-for="Input.Email" placeholder="آدرس ایمیل*" required="">
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label asp-for="Input.Password">گذرواژه</label>
                                        <input asp-for="Input.Password" placeholder="گذرواژه">
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form_group mb-20">
                                        <input asp-for="Input.RememberMe">
                                        <label asp-for="Input.RememberMe">مرا بخاطر بسپار</label>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12 text-md-end mb-20">
                                    <a asp-page="./ForgotPassword" class="link style2">فراموشی رمز؟</a>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <button type="submit" class="btn style1 w-100 d-block">وارد شوید </button>
                                    </div>
                                </div>
                                <div class="col-md-12 text-center">
                                    <p class="mb-0">حساب کاربری نداری؟ <a class="link style2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">ایجاد حساب</a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
