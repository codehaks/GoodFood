@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="content-wrapper">

    <div class="breadcrumb-wrap bg-f br-1">
        <div class="overlay bg-black op-9"></div>
        <img src="assets/img/shape-1.png" alt="Image" class="br-shape-1">
        <img src="assets/img/shape-2.png" alt="Image" class="br-shape-2">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="breadcrumb-title">
                        <h2>ثبت نام</h2>
                        <ul class="breadcrumb-menu list-style">
                            <li><a href="index.html">خانه </a></li>
                            <li>ثبت نام</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <section class="login-wrap pt-100 pb-100">
        <img src="assets/img/shape-1.png" alt="Image" class="login-shape-1">
        <img src="assets/img/shape-2.png" alt="Image" class="login-shape-2">
        <div class="container">
            <div class="col-xl-6 offset-xl-3 col-lg-8 offset-lg-2 col-md-8 offset-md-2">
                <div class="login-form">
                    <div class="login-header bg-green">
                        <h2 class="text-center mb-0">ثبت نام</h2>
                    </div>
                    <div class="login-body">
                        <form class="form-wrap" method="post">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label asp-for="Input.Email">آدرس ایمیل</label>
                                        <input asp-for="Input.Email" dir="ltr" placeholder="آدرس ایمیل*" required>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label asp-for="Input.Password">گذرواژه</label>
                                        <input asp-for="Input.Password" placeholder="گذرواژه">
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label asp-for="Input.ConfirmPassword">تکرار گذرواژه</label>
                                        <input asp-for="Input.ConfirmPassword" placeholder="تکرار گذرواژه">
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <button type="submit" class="btn style1 w-100 d-block">ثبت نام</button>
                                    </div>
                                </div>
                                <div class="col-md-12 text-center">
                                    <p class="mb-0">حساب کاربری داری؟ <a class="link style2" asp-page="./login" asp-area="">ورود</a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
